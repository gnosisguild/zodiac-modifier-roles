{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "KV_URL",
    "KV_REST_API_URL",
    "KV_REST_API_TOKEN",
    "KV_REST_API_READ_ONLY_TOKEN"
  ],
  "tasks": {
    "generate": { "cache": false },
    "test": { "cache": false, "dependsOn": ["build"] },
    "build": {
      "dependsOn": ["clean", "^generate", "^build"],
      "outputs": ["build", "typechain-types"]
    },
    "clean": { "cache": false },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "dist": { "dependsOn": ["^build"] }
  }
}
