{
  "name": "zodiac-roles-modifier-tron",
  "version": "2.1.0-tron",
  "description": "TRON port of Zodiac Roles Modifier - granular, role-based, access control for TRON Safe",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rimraf build typechain-types coverage",
    "build": "tronbox compile",
    "test": "echo 'Tests removed - use deployment verification instead'",
    "coverage": "tronbox test --coverage",
    "deploy:shasta": "tronbox migrate --network shasta",
    "deploy:nile": "tronbox migrate --network nile",
    "deploy:mainnet": "tronbox migrate --network mainnet",
    "console": "tronbox console",
    "verify": "node scripts/verify-contract.js",
    "verify:nile": "node scripts/verify-contract.js TG6AxQr665rkjC7RNkwzZRHZT6jCmkDwmh TRONRoles",
    "prepack": "yarn run clean && yarn run build",
    "prepare": "yarn run clean && yarn run build",
    "lint": "yarn lint:sol",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fmt": "yarn fmt:sol && yarn fmt:ts",
    "fmt:sol": "prettier 'contracts/**/*.sol' -w",
    "fmt:ts": "prettier 'tasks/**/*.ts' 'test/**/*.ts' -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gnosisguild/zodiac-modifier-roles.git"
  },
  "author": "auryn.macmillan@gnosis.io",
  "license": "LGPL-3.0",
  "devDependencies": {
    "@gnosis-guild/zodiac-core": "^3.0.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.5.6",
    "axios": "^1.12.2",
    "chai": "^5.2.1",
    "dotenv": "^16.4.5",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "rimraf": "^6.0.0",
    "solhint": "6.0.0",
    "solhint-plugin-prettier": "0.1.0",
    "tronbox": "^4.0.2",
    "tronweb": "^6.0.0",
    "typescript": "5.8.3"
  },
  "packageManager": "yarn@1.22.19+sha512.ff4579ab459bb25aa7c0ff75b62acebe576f6084b36aa842971cf250a5d8c6cd3bc9420b22ce63c7f93a0857bc6ef29291db39c3e7a23aab5adfd5a4dd6c5d71"
}
