{
  "name": "zodiac-roles-sdk",
  "version": "2.1.8",
  "license": "LGPL-3.0+",
  "main": "build/cjs/sdk/src/index.js",
  "module": "build/esm/sdk/src/index.js",
  "types": "build/cjs/sdk/src/index.d.ts",
  "exports": {
    ".": {
      "require": "./build/cjs/sdk/src/index.js",
      "import": "./build/esm/sdk/src/index.js"
    },
    "./kit": {
      "require": "./build/cjs/sdk/src/presets/authoring/kit.js",
      "import": "./build/esm/sdk/src/presets/authoring/kit.js"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./build/cjs/sdk/src/index.d.ts"
      ],
      "kit": [
        "./build/cjs/sdk/src/presets/authoring/kit.d.ts"
      ]
    }
  },
  "files": [
    "build",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf build && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "check": "yarn check:prettier && yarn check:lint",
    "check:lint": "eslint src test --ext .ts",
    "check:prettier": "prettier \"src/**/*.ts\" --list-different",
    "fix": "yarn fix:prettier && yarn fix:lint",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "hardhat test",
    "test:watch": "yarn mocha -w",
    "pre-commit": "yarn fix",
    "prepare": "yarn eth-sdk"
  },
  "dependencies": {
    "ethers": "^5.4.7",
    "type-fest": "^3.7.1"
  },
  "peerDependencies": {
    "@dethcrypto/eth-sdk-client": "^0.1.6"
  },
  "peerDependenciesMeta": {
    "@dethcrypto/eth-sdk-client": {
      "optional": true
    }
  },
  "devDependencies": {
    "@dethcrypto/eth-sdk": "^0.3.4",
    "@dethcrypto/eth-sdk-client": "^0.1.6",
    "@gnosis.pm/zodiac": "^3.3.7",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.36",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^3.1.4",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.14.0",
    "hardhat-deploy": "^0.11.26",
    "prettier": "^2.8.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.0",
    "typechain": "^8.1.1",
    "typescript": "^5.1.3",
    "yargs": "^16.1.1"
  },
  "resolutions": {
    "typechain": "^8.1.1"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
