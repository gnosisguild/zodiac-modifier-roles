{
  "name": "@gnosis-guild/zodiac-core-modifier-roles",
  "version": "3.0.0",
  "description": "A Zodiac modifier that allows avatars to enforce granular, role-based, permissions for attached modules.",
  "directories": {
    "test": "test"
  },
  "types": "./typechain-types/index.ts",
  "exports": {
    ".": {
      "types": "./typechain-types/index.ts",
      "import": "./typechain-types/index.ts"
    }
  },
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:foundry": "forge test",
    "extract:mastercopy": "yarn run build && yarn hardhat extract:mastercopy",
    "deploy:mastercopies": "yarn hardhat deploy:mastercopies --network",
    "deploy:mastercopy": "yarn hardhat deploy:mastercopy --network",
    "verify:mastercopies": "yarn hardhat verify:mastercopies --network",
    "verify:mastercopy": "yarn hardhat verify:mastercopy --network",
    "coverage": "hardhat coverage",
    "fmt": "yarn fmt:sol && yarn fmt:ts",
    "fmt:sol": "prettier 'contracts/**/*.sol' -w",
    "fmt:ts": "prettier '(test|src)/**/*.ts' -w",
    "prepack": "yarn build"
  },
  "devDependencies": {
    "@gnosis-guild/typechain-ethers-v6": "^0.5.5",
    "@gnosis-guild/zodiac-core": "^3.0.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.10",
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-ignition-ethers": "^3.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/ignition-core": "^3.0.6",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "10.0.10",
    "@types/yargs": "17.0.33",
    "chai": "^5.2.1",
    "eth-provider": "^0.13.7",
    "ethers": "^6.16.0",
    "hardhat": "^2.27.0",
    "hardhat-contract-sizer": "2.10.1",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.7.4",
    "prettier-plugin-solidity": "^1.4.3",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "8.3.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "dotenv": "16.4.7"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
